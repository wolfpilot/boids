{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"]
  },
  "include": ["typings", "./src/**/*"],
  "exclude": [".cache", "public", "node_modules"]
}
